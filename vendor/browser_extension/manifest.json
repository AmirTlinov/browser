{
  "name": "Browser Extension",
  "description": "Local web-access bridge for MCP without IDE.",
  "version": "1.11.4",
  "manifest_version": 3,
  "background": {
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "storage",
    "scripting",
    "debugger"
    ,
    "downloads",
    "offscreen",
    "clipboardWrite",
    "alarms",
    "nativeMessaging"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self';"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "externally_connectable": {
    "matches": [
      "<all_urls>"
    ]
  },
  "action": {
    "default_title": "Browser MCP",
    "default_popup": "static/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "static/*",
        "content_script.js",
        "service_worker.js",
        "offscreen_binary.js",
        "content_script_binary.js",
        "service_worker_binary.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "static/icons/16x16.png",
    "32": "static/icons/32x32.png",
    "48": "static/icons/48x48.png",
    "128": "static/icons/128x128.png"
  },
  "key": ""
}
